<Window x:Class="Harmonition.RecuperationCompte"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Harmonition - Récupération de compte" Height="230" Width="400" ResizeMode="CanMinimize" Icon="pack://application:,,,/Images/favicon.png">
    <Grid>
        <StackPanel>
            <Border Margin="20" BorderBrush="Black" BorderThickness="1">
                <TextBlock Name="txtMessage" FontSize="16" TextAlignment="Center">Un message a été envoyé...</TextBlock>
            </Border>
            <Button Name="btnOk" Content="Ok" HorizontalAlignment="Center" Padding="5" FontSize="18" Width="50" Click="btnOk_Click"></Button>
        </StackPanel>
    </Grid>
</Window>

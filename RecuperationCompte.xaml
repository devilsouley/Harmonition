<Window x:Class="Harmonition.RecuperationCompte"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Harmonition - Récupération de compte" Height="280" Width="400" ResizeMode="CanMinimize" Icon="pack://application:,,,/Images/favicon.png">
    <Grid>
        <StackPanel>
            <Border Margin="20" BorderBrush="Black" BorderThickness="1">
                <TextBlock Name="txtMessage" FontSize="16" TextAlignment="Center">Un message a été envoyé...</TextBlock>
            </Border>
            <StackPanel Orientation="Horizontal">
                <Button Name="btnReenvoyer" Content="Ré-envoyer le message" Padding="5" FontSize="18" Margin="45,0" Click="btnReenvoyerMessage"></Button>
                <Button Name="btnOk" Content="Ok" Padding="5" FontSize="18" Width="50" IsDefault="True" Click="btnFermer"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

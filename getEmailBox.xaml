<Window x:Class="Harmonition.getEmailBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Harmonition - Saisir son adresse courriel" Height="160" Width="300" ResizeMode="NoResize" Icon="pack://application:,,,/Images/favicon.png">
    <Grid>
        <Label Content="Saisissez votre adresse courriel:" FontSize="18"></Label>
        <TextBox Name="txtCourriel" Margin="10,50,10,50" GotFocus="txtCourriel_GotFocus"></TextBox>
        <Button Name="btnOk" Padding="5" Width="40" Height="30" VerticalAlignment="Bottom" Margin="0,10" IsDefault="True" Click="btnOk_Click">Ok</Button>
    </Grid>
</Window>
